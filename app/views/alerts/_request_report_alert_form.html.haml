= form.input :program_id, :required => false, :as => :select, :collection => Program.load_all.sort_by{|prog| prog.name || ''}.map {|prog|[prog.name, prog.id]}
= form.input :report_type, :required => false, :label => 'Report Type', :as => :select, :collection => RequestReport.report_doc_types.map{|doc_type| [RequestReport.type_to_english_translation(doc_type), doc_type]}
= form.input :state, :required => false, :label => 'Status', :as => :select, :collection => RequestReport.all_states.map{|doc_state| [RequestReport.state_to_english_translation(doc_state), doc_state]}
= form.input :due_in, :label => 'Due in:', :required => false, :as => :select, :collection => (0..91).step(7).map{|num| [num, num]}, :aft => 'Days'
= form.input :overdue_by, :label => 'OverDue By:', :required => false, :as => :select, :collection => (0..91).step(7).map{|num| [num, num]}, :aft => 'Days'
= form.input :lead_user_ids, :label => 'PO/Lead', :required => false, :as => :select, :collection => Program.all_program_users.map {|user|[user.full_name, user.id]}
