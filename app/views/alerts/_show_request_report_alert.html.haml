%h3
  Programs
%p= render_alert_field(model.program_id){|p| Program.find(p).name }

%h3
  Report Type
%p= render_alert_field(model.report_type){|rt| RequestReport.type_to_english_translation(rt) }

%h3
  State
%p= render_alert_field(model.state){|rt| RequestReport.state_to_english_translation(rt) }

%h3
  Due In
