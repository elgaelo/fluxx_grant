%h3
  Budget Request Details
.pairs
  .key= "Amount Requested"
  .value= number_to_currency(model.amount_requested, :precision => 0) if model.amount_requested
- if model.respond_to?(:notes)
  %h4
    %strong= "Budget:"
    Provide detailed project budget, including sources of match if applicable
  - partial_data_src_url = url_for(budget_request_path({:request_id => model.id, :skip_wrapper => true}))
  %div{'data-src' => partial_data_src_url}
    = render :partial => 'budget_requests/budget_request_list',  :locals => {:models => ([model.budget_request.where(:deleted_at => nil), (model.respond_to?('workflow_events') ? model.send(:workflow_events) : [])].flatten.compact.sort{|x,y| (x.created_at.nil? || y.created_at.nil?) ? 0 : x.created_at <=> y.created_at})}
