-if model.organization
  =render :partial => "linked_organization", :locals => { :model => model, :params => params }
-else
  %fieldset.inputs
    %ol
      = form.input :organization_name, :input_html => {:class => "refresh-partial", "data-target" => ".matches"}
      = form.commit_button :value => "Show Matches"
      = form.commit_button :value => "Create New Record"

    %ul.buttons
      %li= link_to "Show Matches", "#", :class => 'btn tab-open disabled hide-footer', 'data-target'.to_sym => ".matches"
      %li= link_to "Create New Record", "#", :class => 'btn tab-open show-footer', 'data-target'.to_sym => ".new-form"

  .partial.matches.tab{"data-src" => loi_path(:matching_organizations => true, :skip_wrapper => true)}
    =render :partial => "matching_organizations_list", :locals => { :model => model, :form => form, :params => params }
  .new-form.tab.hidden
    - new_org = Organization.new()
    = semantic_form_for new_org, :html => {:class => 'to-self'} do |new_org_form|
      =render :partial => "organizations/organization_form", :locals => { :model => new_org, :form => new_org_form }