-if model.user
  =render :partial => "linked_user", :locals => { :model => model, :params => params }
-else
  %fieldset.inputs
    %ol
      = form.input :first_name, :input_html => {:class => "refresh-partial", "data-target" => ".matches"}
      = form.input :last_name, :input_html => {:class => "refresh-partial", "data-target" => ".matches"}
      = form.commit_button :value => "Show Matches"
      = form.commit_button :value => "Create New Record"

    %ul.buttons
      %li= link_to "Show Matches", "#", :class => 'btn tab-open disabled hide-footer', 'data-target'.to_sym => ".matches"
      %li= link_to "Create New Record", "#", :class => 'btn tab-open show-footer', 'data-target'.to_sym => ".new-form"

  .partial.matches.tab{"data-src" => loi_path(:matching_users => true, :skip_wrapper => true)}
    =render :partial => "matching_users_list", :locals => { :model => model, :form => form, :params => params }
  .new-form.tab.hidden
    - new_user = User.new(:first_name => model.first_name, :last_name => model.last_name, :user_profile_id => UserProfile.where(:name => 'Grantee').first.id, :email => model.email)
    = semantic_form_for new_user, :html => {:class => 'to-self'} do |new_user_form|
      =render :partial => "users/user_form", :locals => { :model => new_user, :form => new_user_form }