- program_names = []
- program_names << funding_source.funding_source_allocation.program_display_name if funding_source.funding_source_allocation && funding_source.funding_source_allocation.program_display_name
- if Fluxx.config(:no_funding_source_ripple_sub_program) == "1"
  - program_names << funding_source.sub_program.name if funding_source.sub_program
- else
  - program_names << funding_source.funding_source_allocation.sub_program_display_name if funding_source.funding_source_allocation && funding_source.funding_source_allocation.sub_program_display_name
- if Fluxx.config(:no_funding_source_ripple_initiative) == "1"
  - program_names << funding_source.initiative.name if funding_source.initiative
- else
  - program_names << funding_source.funding_source_allocation.initiative_display_name if funding_source.funding_source_allocation && funding_source.funding_source_allocation.initiative_display_name
- if Fluxx.config(:no_funding_source_ripple_sub_initiative) == "1"
  - program_names << funding_source.sub_initiative.name if funding_source.sub_initiative
- else
  - program_names << funding_source.funding_source_allocation.sub_initiative_display_name if funding_source.funding_source_allocation && funding_source.funding_source_allocation.sub_initiative_display_name
= program_names.join ', '
