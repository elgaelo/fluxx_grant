-# Note ESH: this is used by the finance tracker
%div
  %table.tabular{:cellspacing => 0}
    %thead
      %tr
        %th
          = "Reports"
    %tbody
      - if !models || models.empty?
        %tr
          %td= "No Reports"
      - else
        %td
          %table
            <tr width='100%'><td><b>Report</b></td><td><b>Date Due</b></td><td><b>Status</b></td><td><b>Last Update</b></td></tr>
            - models.each do |model|
              %tr
                %td= model.type_to_english
                %td= model.due_at.mdy if model.due_at
                %td= model.state_to_english
                %td= model.updated_at.mdy if model.updated_at
            %tr
              %td{:colspan=>4}
      %tr
        %td