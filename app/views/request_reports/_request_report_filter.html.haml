= render :partial => 'grant_requests/program_filter',  :locals => {:form => form, :prefix => '', :label_prefix => '', :rollup => 'request_hierarchy'}
= form.input :report_type, :required => false, :label => 'Report Type', :as => :select, :collection => RequestReport.report_doc_types.map{|doc_type| [RequestReport.type_to_english_translation(doc_type), doc_type]}, :input_html => {:class => 'add-another'}
= form.input :state, :required => false, :label => 'Status', :as => :select, :collection => RequestReport.all_states.map{|doc_state| [RequestReport.state_to_english_translation(doc_state), doc_state]}, :input_html => {:class => 'add-another'} unless current_user.is_board_member?
= form.input :due_in_days, :label => 'Due in:', :required => false, :as => :select, :collection => (0..91).step(7).map{|num| [num, num]}, :aft => 'Days'
= form.input :overdue_by_days, :label => 'OverDue By:', :required => false, :as => :select, :collection => (0..91).step(7).map{|num| [num, num]}, :aft => 'Days'
= form.input :lead_user_ids, :label => 'PO/Lead', :required => false, :as => :select, :collection => Program.all_program_users.map {|user|[user.full_name, user.id]}, :input_html => {:class => 'add-another'}
= form.input :favorite_user_ids, :label => 'Marked as Favorite', :required => false, :as => :boolean, :checked_value => (current_user ? current_user.id : nil), :unchecked_value => ''
= form.input :sort_attribute, :label => 'Sort Field', :required => false, :as => :select, :include_blank => nil, :collection => [['Due Date', 'due_at'], ['Date Approved', 'approved_at'], ['Org Name', 'request_org_name']]
= form.input :sort_order, :label => 'Sort Order', :required => false, :as => :select, :include_blank => nil, :collection => [['Descending', 'desc'], ['Ascending', 'asc']]